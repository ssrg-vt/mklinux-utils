#!/usr/bin/perl -w

use strict;
use CGI;

my($cgi) = new CGI;

print $cgi->header;
my($color) = "blue";
$color = $cgi->param('color') if defined $cgi->param('color');

print $cgi->start_html(-title => uc($color),
                       -BGCOLOR => $color);
print $cgi->h1("This is $color");

my $info = qx(uptime);
print $cgi->h1("Uptime is: $info\n");

print $cgi->end_html;
